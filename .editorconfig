root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.bat]
indent_size = 4
end_of_line = crlf

[*.gradle]
indent_size = 4

[*.groovy]
indent_size = 4

[*.java]
indent_size = 4

[*.json]
indent_size = 2

[*.kts]
indent_size = 4

[*.xml]
indent_size = 2

[*.yml]
indent_size = 2
